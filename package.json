{
  "name": "inferno-boilerplate",
  "version": "1.0.0",
  "description": "Quick setup with Inferno.",
  "main": "src/index.js",
  "scripts": {
    "dev": "rm -rf dist/*; webpack --mode=development --watch",
    "prod": "rm -rf dist/*; webpack --mode=production",
    "start": "cp ./src/index.html dist/index.html; webpack-dev-server --open --hot --port 8080"
  },
  "author": "Vasilios Magriplis",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.4.4",
    "inferno": "7.3.0",
    "inferno-router": "7.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-syntax-jsx": "7.2.0",
    "@babel/preset-env": "7.5.5",
    "babel-loader": "8.0.6",
    "babel-plugin-inferno": "6.1.0",
    "css-loader": "3.2.0",
    "file-loader": "^4.2.0",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "sass-loader": "7.2.0",
    "style-loader": "1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "4.39.2",
    "webpack-cli": "3.3.6",
    "webpack-dev-server": "^3.8.0",
    "npm-check-updates": "^3.1.21"
  }
}
